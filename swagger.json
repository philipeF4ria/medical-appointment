{
    "openapi": "3.0.0",
    "info": {
        "title": "Serviço de agendamento de consulta",
        "description": "A API é responsável pelo agendamento de consultas médicas",
        "version": "1.0.0"
    },
    "paths": {
        "/specialties": {
            "post": {
                "tags": ["Specialty"],
                "description": "Cadastro de especialidades",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SpecialtyRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SpecialtyResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SpecialtyRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição da especialidade",
                        "example": "DESCRIPTION_TEST"
                    }
                },
                "required": ["name", "description"]
            },
            "SpecialtyResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição da especialidade",
                        "example": "DESCRIPTION_TEST"
                    },
                    "id": {
                        "type": "string",
                        "description": "ID da especialidade cadastrada",
                        "format": "uuid"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Data da criação da especialidade",
                        "format": "date-time"
                    }
                },
                "required": ["name", "description"]
            }
        }
    }
}