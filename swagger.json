{
    "openapi": "3.0.0",
    "info": {
        "title": "Serviço de agendamento de consulta",
        "description": "A API é responsável pelo agendamento de consultas médicas",
        "version": "1.0.0"
    },
    "paths": {
        "/specialties": {
            "post": {
                "tags": ["Specialties"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Cadastro de especialidades",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SpecialtyRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SpecialtyResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": ["Users"],
                "description": "Autenticação do usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token gerado com sucesso"
                    },
                    "401": {
                        "description": "Mensagem de erro"
                    }
                }
            }
        },
        "/doctors": {
            "post": {
                "description": "Cadastro de um médico",
                "tags": ["doctors"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DoctorRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Médico criado com sucesso"
                    },
                    "401": {
                        "description": "Erro ao cadastrar médico"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SpecialtyRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição da especialidade",
                        "example": "DESCRIPTION_TEST"
                    }
                },
                "required": ["name", "description"]
            },
            "SpecialtyResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição da especialidade",
                        "example": "DESCRIPTION_TEST"
                    },
                    "id": {
                        "type": "string",
                        "description": "ID da especialidade cadastrada",
                        "format": "uuid"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Data da criação da especialidade",
                        "format": "date-time"
                    }
                },
                "required": ["name", "description"]
            },
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "object",
                        "description": "username de login",
                        "example": "USERNAME_TEST"
                    },
                    "password": {
                        "type": "string",
                        "description": "password de login",
                        "example": "PASSWORD_TEST"
                    }
                }
            },
            "DoctorRequest": {
                "type": "object",
                "properties": {
                    "crm": {
                        "type": "string",
                        "description": "CRM do médico",
                        "example": "123456",
                        "lenght": 6
                    },
                    "email": {
                        "type": "string",
                        "description": "E-mail do médico",
                        "example": "email@email.com"
                    },
                    "username": {
                        "type": "string",
                        "description": "Username do médico",
                        "example": "Username"
                    },
                    "password": {
                        "type": "string",
                        "description": "Senha do médico",
                        "example": "Password"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do médico",
                        "example": "Name"
                    },
                    "specialtyId": {
                        "type": "string",
                        "description": "Especialidade do médico",
                        "format": "uuid"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "description": "Autenticação do API",
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "tokenUrl": "http://localhost:3333/login"
            }
        }
    }
}